<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingTop="48dp"
    >

<!--    android:paddingLeft="42dp"-->
<!--    android:paddingRight="42dp"-->

<!--    android:paddingBottom="84dp"-->


<!--    <com.github.mikephil.charting.charts.BarChart-->
<!--        android:id="@+id/barChart"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->

    <TextView
        android:id="@+id/txtOne"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Welcome to personal consumption record!"
        android:textColor="#EA5246"
        android:textStyle="bold|italic"
        android:background="#87CEEB"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ts1"
            android:alpha="0.3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="188dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                android:gravity="left">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart1"
                    android:layout_width="185dp"
                    android:layout_height="188dp" />

                <TextView
                    android:id="@+id/txtWeekAverageAm"
                    android:layout_width="113dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:paddingTop="30dp"
                    android:text="Dayly Average consumption(Last week)： "
                    android:textColor="#008000"
                    android:textSize="13sp"
                    android:textStyle="bold|italic" />


            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2">

        <Button
            android:id="@+id/button_next_insert"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="插入" />

        <Button
            android:id="@+id/button_next_query"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/checkSit" />
        <Button
            android:id="@+id/delete"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/delete" />

        <Button
            android:id="@+id/modify"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/modify" />

    </GridLayout>




</LinearLayout>

